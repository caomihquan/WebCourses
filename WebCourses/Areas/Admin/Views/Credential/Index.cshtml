@model PagedList.IPagedList<Model.EF.Credential>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layouts.cshtml";
}





<div class="row ">
    <div class="col-lg-12">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-success"> Danh sách người dùng</h6>

            </div>
            <div class="card-body">
                @using (Html.BeginForm("Index", "Credential", FormMethod.Get))
                {
                    <div class="col-lg-12">
                        <div class="col-md-4">
                            <form class="d-none d-sm-inline-block form-inline mr-auto ml-md-3 my-2 my-md-0 mw-100 navbar-search">
                                <div class="input-group">
                                    <input type="text" value="@ViewBag.SearchString" class="form-control bg-light border-0 small" name="searchString" />
                                    <div class="input-group-append">
                                        <button type="submit" class="btn-success ">Tìm Kiếm</button>

                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>

                }
            </div>
            <div class="clear"></div>
            <div class="col-lg-12">
                <div class="col-md-4">
                    <a href="/Admin/Credential/Create" class="text-success"><i class="fas fa-plus-circle"></i> Tạo User</a>
                </div>
            </div>

            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>RoleID</th>
                                <th>Nhóm</th>
                                <th>#</th>
                            </tr>
                        </thead>


                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr id="row_@item.RoleID@item.UserGroupID">
                                    <td>@item.RoleID</td>
                                    <td>@item.UserGroupID</td>
                                    <td>
                                        <a href="/Admin/Credential/Edit/?roleid=@item.RoleID&usergroup=@item.UserGroupID">Sửa</a>
                                        |
                                        @Ajax.ActionLink("Xóa", "Delete", new { @id = item.RoleID, @usergroup = item.UserGroupID }, new AjaxOptions
                                   {
                                       Confirm = "Bạn có muốn xóa bản ghi này",
                                       OnComplete = "$('#row_" + @item.RoleID + @item.UserGroupID + "').remove()",
                                       HttpMethod = "Delete"
                                   })
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <div class="col-lg-12">
                        <div class="dataTables_paginate paging_simple_numbers col-md-4" id="dataTable_paginate">
                            <span>Page</span> @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) <Span>of</Span> @Model.PageCount

                            @Html.PagedListPager(Model, page => Url.Action("Index", new { page, @searchString = @ViewBag.SearchString }), new PagedListRenderOptions
                            {
                           LiElementClasses = new List<string> { "page-item", "page-link" }
                       })
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

