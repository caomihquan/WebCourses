@model List<Model.EF.Category>

<aside class="posts p-4">
    <h3 class="aside-title nav-bar">Danh Mục</h3>
    <ul class="category">
        @foreach (var item in Model.Where(x => x.ParentsID == null))
        {
            var child = Model.Where(x => x.ParentsID == item.ID);
            var parentClass = child.Count() > 0 ? "class=dropdown-toggle data-toggle=dropdown" : "";

        <li class="dropdown">
            <a  href="#link" @parentClass><span class="fa fa-angle-right"></span>@item.Name </a>

            @if (child.Count() > 0)
            {
                <ul class="dropdown-menu" style="border: none; background: var(--bg-color);margin-left:16px;width:100%">
                    @foreach (var childItem in child)
                    {
                        <li title="@childItem.Name"><a href="/san-pham/@childItem.MetaTitle-@childItem.ID"><span class="fa fa-angle-right"></span>@childItem.Name</a></li>
                    }

                </ul>
            }
        </li>
          }
        </ul>
</aside>
