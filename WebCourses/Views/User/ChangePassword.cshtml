@model Model.ViewModel.ChangePassword

@{
    ViewBag.Title = "ResetPassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<nav id="breadcrumbs" class="breadcrumbs">
    <div class="container page-wrapper text-center">
        <div class="header-section">
            <h2 class="mb-2">Đổi Mật Khẩu</h2>
        </div>
    </div>
</nav>
<!-- /contact breadcrumbs -->
<!-- contact-form -->

<section class="w3l-account py-5">
    <!-- login -->
    <div class="container py-lg-3">
        <div class="literacy-login">
            <div class="literacy-login-info">
                <h2>Mật Khẩu Mới</h2>
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <hr />
                    @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.ID)


                    @Html.LabelFor(model => model.Password)
                    <div class="input-group">
                        @Html.PasswordFor(model => model.Password, new { @class = "form-control" })

                    </div>
                    @Html.LabelFor(model => model.NewPassword)
                    <div class="input-group">
                        @Html.PasswordFor(model => model.NewPassword, new { @class = "form-control" })
                    </div>


                    @Html.LabelFor(model => model.ConfirmPassword)
                    <div class="input-group">
                        @Html.PasswordFor(model => model.ConfirmPassword, new { @class = "form-control" })

                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Đổi Mật Khẩu" class="btn btn-primary" />
                        </div>
                    </div>

                }
            </div>
        </div>
    </div>
</section>
